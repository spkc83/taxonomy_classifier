# Taxonomy Classifier Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Provider options: openai, anthropic, google, cohere, ollama, vllm
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# =============================================================================
# API Keys (set the one for your chosen provider)
# =============================================================================
# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Anthropic (https://console.anthropic.com/)
ANTHROPIC_API_KEY=

# Google AI / Gemini (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=

# Cohere (https://dashboard.cohere.com/api-keys)
COHERE_API_KEY=

# HuggingFace (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=

# =============================================================================
# Local/On-Premises Providers
# =============================================================================
# Ollama - Local LLM server (https://ollama.ai)
OLLAMA_BASE_URL=http://localhost:11434/v1

# vLLM - High-throughput LLM serving (https://vllm.ai)
VLLM_BASE_URL=http://localhost:8000/v1

# =============================================================================
# Authentication Configuration
# =============================================================================
# JWT Secret Key - CHANGE THIS IN PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# API Keys for authentication (comma-separated for multiple keys)
API_KEYS=dev-api-key-12345

# =============================================================================
# SSO Configuration (optional)
# =============================================================================
SSO_ENABLED=false
SSO_PROVIDER_URL=
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=

# =============================================================================
# API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
